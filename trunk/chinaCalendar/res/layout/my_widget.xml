<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_height="150dip"
		android:layout_marginTop="2dip" android:orientation="vertical"
		android:id="@+id/my_widget" android:layout_width="150dip"
		android:background="@drawable/widget_background">
		
		
			
		<TextView android:layout_width="wrap_content"
			android:paddingTop="35dip"
			android:paddingLeft="15dip"
			android:layout_height="wrap_content" android:id="@+id/month_week"
			android:textColor="@drawable/black" android:textSize="15px">
		</TextView>
		


		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/nongli"
			android:paddingTop="3dip" android:paddingLeft="18dip" android:textColor="@drawable/dark">
		</TextView>

		<TextView android:layout_height="wrap_content" android:id="@+id/day"
			android:text="26" android:textColor="@drawable/black" android:textSize="38px" android:gravity="center" android:layout_width="fill_parent">
		</TextView>
		
	</LinearLayout>
</LinearLayout>
